<header>
    <script>
        var tema = localStorage.getItem("tema");
        if (tema) {
            document.body.classList.add("dark");
            this.innerHTML = 'Tema: <i class="fa-solid fa-moon"></i>';
        }
        else {
            document.body.classList.remove("dark");
            this.innerHTML = 'Tema: <i class="fa-solid fa-sun"></i>';
        }
    </script>
    <!-- <h1>CalculatorulTau</h1> -->
    <figure>
        <img sizes="(min-width:960px) 951px, (min-width:600px) 550px, 300px"
            srcset="/resurse/logo/logo-web.png 951w, /resurse/logo/logo-tablet.png 600w, /resurse/logo/logo-phone.png 300w"
            src="/resurse/logo/logo-phone.jpg"
            alt="calculatorultau">
        <!-- <figcaption>calculatorultau.ro</figcaption> -->
    </figure>
    <h1 id="htitle">CalculatorulTau</h1>
    <nav>  
        <label id="hamburger" for="ch-menu">
            <img src="resurse/img/Hamburger_icon_alb.png" alt="menu">
        </label>
        <input id="ch-menu" type="checkbox">
        <ul class="meniu" id="meniul">
            <li><a href="/"><div id="acasa">Acasa</div><div id="casuta"><i class="fas fa-house"></div></i></a>
                <ul>
                    <li><a href="/#firstsection">Despre noi</a></li>
                    <li><a href="/#secondsection">Resurse</a></li>
                    <li><a href="/#thirdsection">Sectiuna trei</a></li>
                </ul>
            </li>
            <!-- <li><a href="#">Inregistrare</a></li> -->
            <li><div><a href="/despre">Despre</a></div>
                <ul>                        
                    <li><a href="/despre#prezentare">Prezentare</a></li>
                    <li><a href="/despre#istoric">Istoric</a></li>
                    <li><a href="/despre#motivatie">Motivatie</a></li>
                    <li><a href="/despre#galerie-statica">Galerie</a></li>
                </ul>
            </li>
            <li><div><a href="/produse">Produse</a></div>
                <ul>
                    <% for(let tip of locals.categoriiProduse) { %>
                        <li><a href="/produse?categorie=<%- tip.unnest %>"><%- tip.unnest.replace(/\w/, c => c.toUpperCase()) %></a></li>
                    <% } %>
                    <!--<li><a href="/produse?tip=procesor">Procesoare</a></li>
                    <li><a href="/produse?tip=conectica">Conectica</a></li>
                    <li><a href="/produse?tip=periferice">Periferice</a></li>
                    <li><a href="case.html">Carcase</a></li>
                    <li><a href="storage.html">Stocare</a></li>
                    <li><a href="psu.html">Surse</a></li>-->
                </ul>
            </li>
            <% if(locals.utilizator && locals.utilizator.rol=="admin") { %>
            <li><a href="/useri">Useri</a></li>
            <% } %>
            <li><a id="btn_tema">Tema: <i class="fa-solid fa-sun"></i></a></li>
            <li><a href="#">Contact</a></li>
            <% if (locals.utilizator) { %>
                <li><div id="username-button"> <img src="/profilepicture" width="32" height="32" onerror="this.style.display = 'none';"> <%- locals.utilizator.username %></div>
                    <ul>
                        <li><a href="/profil">Profil</a></li>
                        <li><a href="/logout">Logout</a></li>
                    </ul>
                </li>
                <script>
                    document.getElementById("username-button").addEventListener("mouseover", function() {
                        this.innerHTML = "<%- locals.utilizator.prenume %> <%- locals.utilizator.nume %>";
                    });
                    document.getElementById("username-button").addEventListener("mouseout", function() {
                        this.innerHTML = "<img src=\"/profilepicture\" width=\"32\" onerror=\"this.style.display = 'none';\" height=\"32\"> <%- locals.utilizator.username %>";
                    });
                </script>
            <% } else { %>
            <li><a href="/inregistrare">Inregistrare</a></li>
            <li>
                <a href="#">Conectare</a>
                <ul>
                    <form id="form_inreg"  method="post" class="date"  action="/login"  enctype="multipart/form-data">
                        <!-- <p> -->
                            <label>
                                Username: <input type="text" name="username" id="inp-username" value="prof<%= Math.floor(Math.random()*100000) %>" required pattern="[A-Za-z0-9]+">
                            </label>
                            <br>
                        <!-- </p> -->
                        <!-- <p> -->
                            <label>
                                Parola: <input id="parl" type="password" required  name="parola" value="">
                            </label>
                        <!-- </p> -->
                        <input type="submit" value="Conectare">
                    </form>
                </ul>
            </li> 
            <% } %>
        </ul>
    </nav>
</header>