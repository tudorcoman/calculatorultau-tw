<!DOCTYPE html>
<html  lang="ro">
    <head>
        <meta name="description" content="Cofetaria Dulcelind - utilizatori.">
        <meta name="keywords" content="cofetarie, Dulcelind, utilizatori">
        <link rel="stylesheet" href="/resurse/css/useri.css" type="text/css" />
        <title>CalculatorulTau - utilizatori</title>
        <%- include("../fragmente/head") %>     
        <script type="text/javascript" src=/resurse/js/produse.js></script>
    </head>
    <body>
    <%- include("../fragmente/header") %>

    <main>
    <div class="afisaj">
        <h2>Useri</h2>

		<table id="useri">
		  <tr>
			<th>id</th><th>Username</th><th>Nume</th><th>Email</th><th>Blocat</th><th>Blocheaza/deblocheaza</th>
		  </tr>

		  <% for (var i = 0; i < useri.length; i++) { 
				if(useri[i].rol=="comun"){
				%>
				<tr>
					<td><%= useri[i].id %></td>
				  	<td><%= useri[i].username %></td>
				  	<td><%= useri[i].nume %></td>
				  	<td><%= useri[i].email %></td>
				  	<td><%= useri[i].blocat %></td>
				  	<td>
						<form id="blocheaza-user-<%- useri[i].id %>" method="post" action="/blocheaza_utiliz">
							<input type="hidden" name="id_utiliz" value="<%- useri[i].id %>">
							<input type="hidden" name="email" value="<%- useri[i].email %>">
							<input type="hidden" name="blocat" value="<%- useri[i].blocat %>">
							<% if (useri[i].blocat) { %>
								<input type="submit" value="Deblocheaza">
							<% } else { %>
								<input type="submit" value="Blocheaza">
							<% } %>
						</form>
					</td>
				</tr> 
   
				<% } %>			
		  <% } %>
		</table>
		
		<!-- <p>Sterge utilizator</p>
		<form id="sterge" method="post" action="/sterge_utiliz">
			<label>
				Id: <input type="text" name="id_utiliz" value="">
			</label>
			
			<input type="submit" value="Submit">
		</form> -->
	</div>
</main>


    <%- include("../fragmente/footer") %>

</body>
</html>